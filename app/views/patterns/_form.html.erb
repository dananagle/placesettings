<%= simple_form_for(@pattern) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :manufacturer %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :color_metal %>
    <%= f.input :color_theme %>
    <%= f.input :website %>
    <%= f.input :address %>
    <%= f.input :user_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
